<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/societyreg"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/bg1"
            tools:viewBindingIgnore="true"
           >
            <TextView
                android:id="@+id/socreg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Society Registration"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="serif"
                tools:viewBindingIgnore="true"
                android:textColor="@color/black"
                android:textColorHint="#565353"


                />




        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/memberrec"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginLeft="15dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/bg1"
            tools:viewBindingIgnore="true"


            >
            <TextView
                android:id="@+id/memrec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Member Registration"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="serif"
                android:textColor="@color/black"
                tools:viewBindingIgnore="true"
                android:textColorHint="#565353"



                />


        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/guest"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/bg1"
            tools:viewBindingIgnore="true"

            >
            <TextView
                android:id="@+id/guesttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guest"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="serif"
                android:textColor="@color/black"
                tools:viewBindingIgnore="true"
                android:textColorHint="#565353"




                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/pack"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginLeft="15dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/bg1"
            tools:viewBindingIgnore="true"

            >
            <TextView
                android:id="@+id/packtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Package"
                android:textSize="30dp"
                android:fontFamily="serif"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                tools:viewBindingIgnore="true"
                android:textColorHint="#565353"



                />


        </androidx.cardview.widget.CardView>

    </LinearLayout>







</LinearLayout>